<h1>New Conversation</h1>

<%= form_for(@conversation) do |f| %>
  <div>
    <%= f.label :to, "To:" %>
    <%= text_field_tag :user_autocomplete, nil, placeholder: "Handle", id: "user_autocomplete" %>
    <%= f.hidden_field :to, placeholder: "Handle", name: "user_conversation[to][]" %>
  </div>
  <%= f.fields_for :conversation do |c| %>
    <div>
      <%= c.label :subject %>
      <%= c.text_field :subject %>
    </div>
    <%= c.fields_for :messages do |m| %>
      <div>
        <%= m.label :body %><br />
        <%= m.text_area :body %>
      </div>
    <% end %>
  <% end %>

  <%= f.submit %>
<% end %>
