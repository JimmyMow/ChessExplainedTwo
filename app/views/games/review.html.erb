<div class="container">
  <ul class="nav nav-tabs col-sm-9" role="tablist">
    <li class="active"><a href="#review" role="tab" data-toggle="tab">Review Mode</a></li>
    <li><a href="#sandbox" role="tab" data-toggle="tab">Sandbox Mode</a></li>
  </ul>

  <div class="tab-content col-sm-9">
    <div class="tab-pane fade in active" id="review">
      <h1>Review</h1>
      <% @game.moves.each do |move| %>
        <%= link_to move.notation, "#" %>
      <% end %>
    </div>

    <div class="tab-pane fade in" id="sandbox">
      <div class="game-details col-sm-3">
      <h4 class='text-center'>Board Settings</h4>
        <%= link_to "Starting position", "#", class: "btn btn-default btn-block", id: "sandboxStartBtn" %>
        <%= link_to "Clear board", "#", class: "btn btn-default btn-block", id: "sandboxClearBtn" %>
      </div>
      <div id="sandboxBoard" style="width: 500px" class='col-sm-9 col-sm-offset-1'></div>
    </div>
  </div>

  <div class="video-chat col-sm-3">
    <ul class="video-boxes">
      <li class="video"></li>
      <li class="video"></li>
    </ul>
  </div>
</div>

<style type="text/css">
  .video {
    width: 150px;
    height: 150px;
    background-color: red;
    margin: 5px 0;
    list-style-type: none;
  }

  .game-details {

  }
</style>
