<h4 class="text-center">Edit game details</h4>
<%= form_for(@game, remote: true) do |f| %>
    <div class="form-group">
      <%= f.label :white_player %>
      <%= f.text_field :white_player, class: "form-control", placeholder: "White player" %>
    </div>
    <div class="form-group">
      <%= f.label :black_player %>
      <%= f.text_field :black_player, class: "form-control", placeholder: "Black player" %>
    </div>
    <div class="form-group">
      <%= f.label :result %>
      <%= f.text_field :result, class: "form-control", placeholder: "Result" %>
    </div>
     <div class="form-group">
      <%= f.label :event %>
      <%= f.text_field :event, class: "form-control", placeholder: "Event" %>
    </div>
    <div class="form-group">
      <%= f.label :opening %>
      <%= f.text_field :opening, class: "form-control", placeholder: "Opening" %>
    </div>
    <div class="form-group">
      <%= f.button "Update game details", class: "btn btn-primary btn-block", data: {disable_with: "<i class=\"fa fa-spinner fa-spin\"></i> Loading..."} %>
    </div>
  <% end %>
