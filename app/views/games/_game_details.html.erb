<h4 class="text-center">Game details</h4>
<%= form_for(@game, remote: true) do |f| %>
    <div class="form-group">
      <%= f.label :white_player %>
      <%= f.text_field :white_player, class: "form-control", placeholder: "Enter white player", autofocus: true, readonly: true %>
    </div>
    <div class="form-group">
      <%= f.label :black_player %>
      <%= f.text_field :black_player, class: "form-control", placeholder: "Enter black player", readonly: true %>
    </div>
    <div class="form-group">
      <%= f.label :result %>
      <%= f.text_field :result, class: "form-control", placeholder: "Enter result", readonly: true %>
    </div>
     <div class="form-group">
      <%= f.label :event %>
      <%= f.text_field :event, class: "form-control", placeholder: "Enter event", readonly: true %>
    </div>
    <div class="form-group">
      <%= f.label :opening %>
      <%= f.text_field :opening, class: "form-control", placeholder: "Enter opening", readonly: true %>
    </div>

    <% if @game.owner.id == current_user.id %>
      <div class="form-group">
        <%= link_to "Edit game details", edit_game_url(@game.id), remote: true, class: "btn btn-default btn-block" %>
      </div>
    <% end %>

  <% end %>
