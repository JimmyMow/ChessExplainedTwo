<div class="container">
  <h3 class="text-center devise-header">Welcome back. Let's learn some more chess.</h3>
  <div class="col-sm-4 col-sm-offset-4">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-conatiner">
        <%= f.email_field :email, autofocus: true, placeholder: "bobbyfischer@gmail.com", class: "form-control" %>
      </div>
      <div class="input-container">
        <%= f.password_field :password, autocomplete: "off", placeholder: "••••••••", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            Remember me
          <% end %>
        </div>
      <% end -%>

      <div>
        <%= f.button "Sign in", class: "btn btn-block btn-primary", data: {disable_with: "<i class=\"fa fa-spinner fa-spin\"></i> Loading..."} %>
      </div>
    <% end %>

    <div class="devise-help-links">
      <p>Forgot your password? No worries, click <%= link_to "here", new_user_password_url %>.</p>
      <p>Don't have an account? This <%= link_to "link", new_user_registration_url %> will help out.</p>
    </div>

  </div>
</div>
